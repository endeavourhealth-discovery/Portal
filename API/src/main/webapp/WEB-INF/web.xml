<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- ===== MAIN API SERVLET ===== -->
    <servlet>
        <servlet-name>Portal API</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>io.swagger.jaxrs.listing,org.endeavourhealth.coreui.endpoints,org.endeavourhealth.portal.api.endpoints</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>org.glassfish.jersey.jackson.JacksonFeature,
                org.endeavourhealth.common.security.CustomRolesAllowedFeature,
                org.endeavourhealth.informationmodel.api.framework.exceptions.BaseExceptionMapper
            </param-value>
        </init-param>

        <!-- enable directory listings -->
        <init-param>
            <param-name>listings</param-name>
            <param-value>true</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Portal API</servlet-name>
        <url-pattern>/portal-api/*</url-pattern>
    </servlet-mapping>

    <!-- ===== PUBLIC ENDPOINTS SERVLET ===== -->
    <servlet>
        <servlet-name>Public Resources</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>org.endeavourhealth.coreui.endpoints_public</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>org.glassfish.jersey.jackson.JacksonFeature,
                org.endeavourhealth.ui.framework.exceptions.BaseExceptionMapper</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Public Resources</servlet-name>
        <url-pattern>/public/*</url-pattern>
    </servlet-mapping>


    <!-- ===== SWAGGER SERVLET ===== -->
    <servlet>
        <servlet-name>Jersey2Config</servlet-name>
        <servlet-class>io.swagger.jersey.config.JerseyJaxrsConfig</servlet-class>
        <init-param>
            <param-name>api.version</param-name>
            <param-value>1.0.0</param-value>
        </init-param>
        <init-param>
            <param-name>swagger.api.basepath</param-name>
            <param-value>http://localhost:8081/api</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <!-- ===== STARTUP ===== -->
    <context-param>
        <param-name>app_id</param-name>
        <param-value>eds-portal</param-value>
    </context-param>

    <listener>
        <listener-class>
            org.endeavourhealth.coreui.framework.StartupConfig
        </listener-class>
    </listener>

    <!-- ============================================ -->
    <!-- JEE security settings - Keycloak integration -->
    <!-- ============================================ -->

    <!-- set the class to provide keycloak.json -->
    <context-param>
        <param-name>keycloak.config.resolver</param-name>
        <param-value>org.endeavourhealth.common.security.keycloak.KeycloakConfigResolverImpl</param-value>
    </context-param>

    <!-- API docs json is public -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>api</web-resource-name>
            <url-pattern>/portal-api/swagger.json</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <!-- API is private and requires the user to authenticate and be an EDS user -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>api</web-resource-name>
            <url-pattern>/portal-api/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>eds_user</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- use Keycloak authentication valve installed in the container -->
    <login-config>
        <auth-method>KEYCLOAK</auth-method>
        <realm-name>Endeavour</realm-name>
    </login-config>

    <!-- all roles in the system MUST be specified here -->
    <security-role>
        <role-name>eds_user</role-name>
    </security-role>

    <session-config>
        <session-timeout>60</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- ===== CORS FILTERING ===== -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>org.endeavourhealth.coreui.framework.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>